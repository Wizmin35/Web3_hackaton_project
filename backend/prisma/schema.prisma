// Prisma schema for SolBook

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Salon {
  id              String   @id @default(cuid())
  walletAddress   String   @unique
  name            String
  description     String?
  imageUrl        String?
  address         String?
  city            String?
  phone           String?
  email           String?
  isActive        Boolean  @default(true)
  totalEarnings   BigInt   @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  services     Service[]
  reservations Reservation[]
  availability SalonAvailability[]

  @@index([walletAddress])
  @@index([city])
}

model Service {
  id              String   @id @default(cuid())
  salonId         String
  onChainId       Int
  name            String
  description     String?
  priceLamports   BigInt
  priceDisplay    Float
  durationMinutes Int
  category        String   @default("OTHER")
  imageUrl        String?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  salon        Salon         @relation(fields: [salonId], references: [id], onDelete: Cascade)
  reservations Reservation[]

  @@index([salonId])
  @@index([category])
}

model Reservation {
  id                String    @id @default(cuid())
  onChainAddress    String?   @unique
  transactionHash   String?
  clientWallet      String
  salonId           String
  serviceId         String
  appointmentTime   DateTime
  amountLamports    BigInt
  status            String    @default("PENDING")
  cancelledAt       DateTime?
  completedAt       DateTime?
  refundAmount      BigInt?
  salonFee          BigInt?
  appCommission     BigInt?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  salon   Salon   @relation(fields: [salonId], references: [id])
  service Service @relation(fields: [serviceId], references: [id])

  @@index([clientWallet])
  @@index([salonId])
  @@index([status])
  @@index([appointmentTime])
}

model SalonAvailability {
  id        String   @id @default(cuid())
  salonId   String
  dayOfWeek Int
  startTime String
  endTime   String
  isActive  Boolean  @default(true)

  salon Salon @relation(fields: [salonId], references: [id], onDelete: Cascade)

  @@unique([salonId, dayOfWeek])
  @@index([salonId])
}

model BlockedSlot {
  id        String   @id @default(cuid())
  salonId   String
  startTime DateTime
  endTime   DateTime
  reason    String?
  createdAt DateTime @default(now())

  @@index([salonId])
  @@index([startTime, endTime])
}
